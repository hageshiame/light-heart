{
  "dashboard": {
    "title": "Light Heart Game Server Dashboard",
    "description": "Complete monitoring dashboard for Light Heart game server",
    "tags": ["game", "server", "performance"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP 请求速率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_request_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP 请求延迟",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "http_request_duration_seconds",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "错误率",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_errors_total[5m]) / rate(http_request_total[5m]) * 100"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 4,
        "title": "缓存命中率",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "cache_hit_ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 5,
        "title": "数据库查询耗时",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "db_query_duration_seconds",
            "legendFormat": "{{operation}} {{table}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "内存使用",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "process_memory_bytes / 1024 / 1024"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB"
          }
        }
      },
      {
        "id": 7,
        "title": "在线玩家数",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "targets": [
          {
            "expr": "game_player_online"
          }
        ]
      },
      {
        "id": 8,
        "title": "游戏战斗统计",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "game_battles_total",
            "legendFormat": "{{result}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "系统服务时间",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "process_uptime_seconds / 3600"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "hours"
          }
        }
      },
      {
        "id": 10,
        "title": "请求速率趋势",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 6,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(http_request_total[1m])"
          }
        ]
      }
    ],
    "alerts": [
      {
        "name": "High Error Rate",
        "condition": "error_rate > 5",
        "duration": "5m",
        "severity": "critical"
      },
      {
        "name": "High Database Latency",
        "condition": "db_query_duration_seconds > 500",
        "duration": "10m",
        "severity": "warning"
      },
      {
        "name": "Low Cache Hit Rate",
        "condition": "cache_hit_ratio < 50",
        "duration": "15m",
        "severity": "warning"
      },
      {
        "name": "High Memory Usage",
        "condition": "process_memory_bytes > 1024 * 1024 * 500",
        "duration": "10m",
        "severity": "warning"
      }
    ]
  }
}
